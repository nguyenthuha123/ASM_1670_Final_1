@model IEnumerable<_1670_Final.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: white">Index</h1>

<button type="button" class="btn btn-success"><a asp-action="Create">Create New</a></button>

<table class="table">
    <thead>
        <tr class="white-text">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="white-text">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <button type="button" class="btn btn-success" ><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button> |
                <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button> |
                <button type="button" class="btn btn-warning"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
